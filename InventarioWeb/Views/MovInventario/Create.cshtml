@using InventarioWeb.ViewModels
@model MovInventarioViewModel
@{
    ViewData["Title"] = "Crear Movimiento de Inventario";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header">
                    <h4 class="mb-0">@ViewData["Title"]</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        
                        <!-- Campos obligatorios -->
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="CodCia" class="form-label"></label>
                                    <input asp-for="CodCia" class="form-control" maxlength="5" required />
                                    <span asp-validation-for="CodCia" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="CompaniaVenta3" class="form-label"></label>
                                    <input asp-for="CompaniaVenta3" class="form-control" maxlength="5" required />
                                    <span asp-validation-for="CompaniaVenta3" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="AlmacenVenta" class="form-label"></label>
                                    <input asp-for="AlmacenVenta" class="form-control" maxlength="10" required />
                                    <span asp-validation-for="AlmacenVenta" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="TipoMovimiento" class="form-label"></label>
                                    <input asp-for="TipoMovimiento" class="form-control" maxlength="2" required />
                                    <span asp-validation-for="TipoMovimiento" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="TipoDocumento" class="form-label"></label>
                                    <input asp-for="TipoDocumento" class="form-control" maxlength="2" required />
                                    <span asp-validation-for="TipoDocumento" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="NroDocumento" class="form-label"></label>
                                    <input asp-for="NroDocumento" class="form-control" maxlength="50" required />
                                    <span asp-validation-for="NroDocumento" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        
                        <div class="form-group mb-3">
                            <label asp-for="CodItem2" class="form-label"></label>
                            <input asp-for="CodItem2" class="form-control" maxlength="50" required />
                            <span asp-validation-for="CodItem2" class="text-danger"></span>
                        </div>
                        
                        <!-- Campos opcionales -->
                        <hr>
                        <h5>Informaci√≥n Adicional</h5>
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Proveedor" class="form-label"></label>
                                    <input asp-for="Proveedor" class="form-control" maxlength="100" />
                                    <span asp-validation-for="Proveedor" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="AlmacenDestino" class="form-label"></label>
                                    <input asp-for="AlmacenDestino" class="form-control" maxlength="50" />
                                    <span asp-validation-for="AlmacenDestino" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Cantidad" class="form-label"></label>
                                    <input asp-for="Cantidad" class="form-control" type="number" min="0" />
                                    <span asp-validation-for="Cantidad" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="FechaTransaccion" class="form-label"></label>
                                    <input asp-for="FechaTransaccion" class="form-control" type="date" />
                                    <span asp-validation-for="FechaTransaccion" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Referencias -->
                        <hr>
                        <h5>Referencias</h5>
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="DocRef1" class="form-label"></label>
                                    <input asp-for="DocRef1" class="form-control" maxlength="50" />
                                    <span asp-validation-for="DocRef1" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="DocRef2" class="form-label"></label>
                                    <input asp-for="DocRef2" class="form-control" maxlength="50" />
                                    <span asp-validation-for="DocRef2" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group mb-3">
                                    <label asp-for="DocRef3" class="form-label"></label>
                                    <input asp-for="DocRef3" class="form-control" maxlength="50" />
                                    <span asp-validation-for="DocRef3" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group mb-3">
                                    <label asp-for="DocRef4" class="form-label"></label>
                                    <input asp-for="DocRef4" class="form-control" maxlength="50" />
                                    <span asp-validation-for="DocRef4" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group mb-3">
                                    <label asp-for="DocRef5" class="form-label"></label>
                                    <input asp-for="DocRef5" class="form-control" maxlength="50" />
                                    <span asp-validation-for="DocRef5" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Botones -->
                        <div class="form-group mt-4">
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-save"></i> Guardar
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Volver
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}